{
  "id": "plugin-filereader",
  "displayName": "File Reader",
  "description": "Publisher which extracts data from files.",
  "apiVersion": "2",
  "versionDescription": "Version 4",
  "version": "4.0.0",
  "iconFile": "icon.png",
  "executable": "PluginFileReader",
  "kind": "publisher",
  "os": "$GOOS",
  "arch": "$GOARCH",
  "accessGroups": [],
  "canConfigure": true,
  "canConfigureRealTime": false,
  "canProduceMultipleSchemas": true,
  "canAcceptQueryBasedSchemas": true,
  "canUseOAuth": false,
  "canConfigureWrite": true,
  "canWrite": true,
  "canConfigureReplication": true,
  "canWriteReplication": true,
  "querySchema": {
    "ui": {
      "ui:widget": "code",
      "ui:options": {
        "language": "sql"
      }
    },
    "schema": {
      "type": "string"
    }
  },
  "configSchema": {
    "ui": {
      "ui:order": [
        "GlobalColumnsConfigurationFile",
        "FtpHostname",
        "FtpPort",
        "FtpUsername",
        "FtpPassword",
        "FtpSshKey",
        "Indexes",
        "RootPaths"
      ],
      "FtpPassword": {
        "ui:widget": "password"
      },
      "Indexes":{
        "items": {
          "ui:order": [
            "TableName",
            "IndexColumns"
          ]
        }
      },
      "RootPaths": {
        "items": {
          "ui:order": [
            "RootPath",
            "Filter",
            "Name",
            "CleanupAction",
            "ArchivePath",
            "SkipLines",
            "FileReadMode",
            "Mode",
            "ModeSettings"
          ],
          "ModeSettings": {
            "DelimitedSettings": {
              "ui:order": [
                "Delimiter",
                "HasHeader",
                "AutoGenRowNumber"
              ]
            },
            "FixedWidthSettings": {
              "ui:order": [
                "AutoGenRowNumber",
                "ColumnsConfigurationFile",
                "Columns"
              ],
              "Columns": {
                "items": {
                  "ui:order": [
                    "ColumnName",
                    "IsKey",
                    "TrimWhitespace",
                    "ColumnStart",
                    "ColumnEnd"
                  ]
                }
              }
            },
            "ExcelModeSettings": {
              "ui:order": [
                "HasHeader",
                "AutoGenRowNumber",
                "ExcelColumns",
                "ExcelCells"
              ],
              "ExcelCells": {
                "items": {
                  "ui:order": [
                    "ColumnName",
                    "ColumnIndex",
                    "RowIndex"
                  ]
                }
              }
            },
            "AS400Settings": {
              "ui:order": [
                "AS400FormatsConfigurationFile",
                "KeyValueWidth",
                "Formats"
              ],
              "Formats": {
                "items": {
                  "ui:order": [
                    "KeyValue",
                    "IsGlobalHeader",
                    "SingleRecordPerLine",
                    "Columns",
                    "MultiLineDefinition",
                    "HeaderRecordKeys",
                    "MultiLineColumns"
                  ],
                  "KeyValue": {
                    "ui:order": [
                      "Value",
                      "Name"
                    ]
                  },
                  "Columns": {
                    "items": {
                      "ui:order": [
                        "ColumnName",
                        "IsKey",
                        "TrimWhitespace",
                        "ColumnStart",
                        "ColumnEnd",
                        "IsGlobalHeader",
                        "IsHeader"
                      ]
                    }
                  },
                  "MultiLineDefinition": {
                    "ui:order": [
                      "TagNameDelimiter",
                      "TagNameStart",
                      "TagNameEnd",
                      "ValueLengthStart",
                      "ValueLengthEnd",
                      "ValueStart"
                    ]
                  },
                  "MultiLineColumns": {
                    "items": {
                      "ui:order": [
                        "ColumnName",
                        "IsKey",
                        "TrimWhitespace",
                        "ColumnStart",
                        "ColumnEnd",
                        "IsGlobalHeader",
                        "IsHeader"
                      ]
                    }
                  }
                }
              }
            },
            "XmlSettings": {
              "ui:order": [
                "XsdFilePathAndName",
                "XmlKeys"
              ],
              "XmlKeys": {
                "items": {
                  "ui:order": [
                    "ElementId",
                    "AttributeId"
                  ]
                }
              }
            },
            "FileCopySettings": {
              "ui:order": [
                "FtpHostname",
                "FtpPort",
                "FtpUsername",
                "FtpPassword",
                "FtpSshKey",
                "TargetFileMode",
                "TargetDirectoryPath",
                "OverwriteTarget"
              ],
              "FtpPassword": {
                "ui:widget": "password"
              }
            }
          }
        }
      }
    },
    "schema": {
      "type": "object",
      "properties": {
        "GlobalColumnsConfigurationFile": {
          "type": "string",
          "title": "Global Columns Configuration File",
          "description": "Global configuration file for columns in fixed width root paths. Overridden by specific columns configuration files.",
          "default": ""
        },
        "FtpHostname": {
          "type": "string",
          "title": "FTP Hostname",
          "description": "Hostname for any root paths using FTP/SFTP.",
          "default": ""
        },
        "FtpPort": {
          "type": "number",
          "title": "FTP Port",
          "description": "Port for any root paths using FTP/SFTP.",
          "default": 22
        },
        "FtpUsername": {
          "type": "string",
          "title": "FTP Username",
          "description": "Username for any root paths using FTP/SFTP.",
          "default": ""
        },
        "FtpPassword": {
          "type": "string",
          "title": "FTP Password",
          "description": "Password for any root paths using FTP/SFTP.",
          "default": ""
        },
        "FtpSshKey": {
          "type": "string",
          "title": "SFTP SSH Key",
          "description": "Path to SSH private key for any root paths using SFTP.",
          "default": ""
        },
        "Indexes": {
          "title": "Indexes",
          "description": "Indexes to add to tables.",
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "object",
            "properties": {
              "TableName": {
                "type": "string",
                "title": "Table Name",
                "description": "Name of table to apply the index to.",
                "default": ""
              },
              "IndexColumns": {
                "title": "Index Column Names",
                "description": "Columns to include in this index.",
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "default": ""
                }
              }
            }
          }
        },
        "RootPaths": {
          "title": "Root Paths",
          "description": "The folder(s) containing the files.",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "RootPath": {
                "title": "Root Path",
                "description": "The folder containing the files",
                "type": "string"
              },
              "Filter": {
                "type": "string",
                "description": "Filters used to select files beneath the root path. Each filter should be a regular expression.",
                "default": "*.csv"
              },
              "Name": {
                "type": "string",
                "description": "Name for the schema and table. If one is not provided the folder name will be used.",
                "default": ""
              },
              "CleanupAction": {
                "type": "string",
                "title": "Cleanup Action",
                "description": "Action taken to clean up after reading.",
                "default": "Nothing",
                "examples": ["string"],
                "enum": ["Nothing", "Delete", "Archive"]
              },
              "ArchivePath": {
                "type": "string",
                "title": "Archive Folder",
                "description": "The folder to move files to after processing, if cleanup action is \"archive\".",
                "default": "",
                "examples": ["string"]
              },
              "SkipLines": {
                "title": "Skip Lines",
                "description": "The number of lines to skip at the top of the file.",
                "default": 0,
                "type": "number"
              },
              "FileReadMode": {
                "type": "string",
                "title": "File Read Mode",
                "description": "Mode to access target files.",
                "default": "Local",
                "enum": ["Local", "FTP", "SFTP"]
              },
              "Mode": {
                "type": "string",
                "title": "Mode",
                "description": "Mode to use when reading target files.",
                "default": "Delimited",
                "enum": [
                  "Delimited",
                  "Fixed Width Columns",
                  "Excel",
                  "XML",
                  "AS400",
                  "File Copy"
                ]
              }
            },
            "required": ["RootPath", "Filter", "Mode"],
            "dependencies": {
              "Mode": {
                "oneOf": [
                  {
                    "properties": {
                      "Mode": {
                        "enum": ["Delimited"]
                      },
                      "ModeSettings": {
                        "type": "object",
                        "title": "",
                        "properties": {
                          "DelimitedSettings": {
                            "type": "object",
                            "title": "Delimited Settings",
                            "properties": {
                              "Delimiter": {
                                "type": "string",
                                "title": "Delimiter",
                                "description": "The delimiter for delimited files.",
                                "default": ",",
                                "examples": [",", "|"],
                                "pattern": ""
                              },
                              "HasHeader": {
                                "type": "boolean",
                                "title": "Has Header",
                                "description": "Does the file have a header row?",
                                "default": false,
                                "examples": [true]
                              },
                              "AutoGenRowNumber": {
                                "type": "boolean",
                                "title": "Auto Generate Row Number",
                                "description": "Automatically generate a row number property (AUTO_ROW_NUM)",
                                "default": false,
                                "examples": [true]
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "properties": {
                      "Mode": {
                        "enum": ["XML"]
                      },
                      "ModeSettings": {
                        "type": "object",
                        "title": "",
                        "properties": {
                          "XmlSettings": {
                            "type": "object",
                            "title": "XML Settings",
                            "properties": {
                              "XmlKeys": {
                                "readOnly": false,
                                "type": "array",
                                "minItems": 1,
                                "title": "XML Keys",
                                "description": "Parts of the composite key for the records.",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "ElementId": {
                                      "title": "Element Id",
                                      "description": "The Id of the XML element tag that contains the key.",
                                      "type": "string"
                                    },
                                    "AttributeId": {
                                      "title": "Attribute Id",
                                      "description": "The Id of the attribute on the XML element tag (if no attribute is provided the value of the element tag will be used).",
                                      "type": "string"
                                    }
                                  },
                                  "required": ["ElementId"]
                                }
                              },
                              "XsdFilePathAndName": {
                                "title": "XSD File Path and Name",
                                "description": "A fully qualified path to the XSD file.",
                                "type": "string"
                              }
                            },
                            "required": ["XmlKeys", "XsdFilePathAndName"]
                          }
                        }
                      }
                    }
                  },
                  {
                    "properties": {
                      "Mode": {
                        "enum": ["File Copy"]
                      },
                      "ModeSettings": {
                        "type": "object",
                        "title": "",
                        "properties": {
                          "FileCopySettings": {
                            "type": "object",
                            "title": "File Copy Settings",
                            "properties": {
                              "FtpHostname": {
                                "type": "string",
                                "title": "Target FTP Hostname",
                                "description": "Hostname for Target FTP/SFTP.",
                                "default": ""
                              },
                              "FtpPort": {
                                "type": "number",
                                "title": "Target FTP Port",
                                "description": "Port for Target using FTP/SFTP.",
                                "default": 22
                              },
                              "FtpUsername": {
                                "type": "string",
                                "title": "Target FTP Username",
                                "description": "Username for Target using FTP/SFTP.",
                                "default": ""
                              },
                              "FtpPassword": {
                                "type": "string",
                                "title": "Target FTP Password",
                                "description": "Password for Target using FTP/SFTP.",
                                "default": ""
                              },
                              "FtpSshKey": {
                                "type": "string",
                                "title": "Target SFTP SSH Key",
                                "description": "Path to SSH private key for Target using SFTP.",
                                "default": ""
                              },
                              "TargetFileMode": {
                                "type": "string",
                                "title": "Target File Write Mode",
                                "description": "Mode to write target files.",
                                "default": "Local",
                                "enum": ["Local", "FTP", "SFTP"]
                              },
                              "TargetDirectoryPath": {
                                "type": "string",
                                "title": "Target Directory Path",
                                "description": "Path to Target directory.",
                                "default": ""
                              },
                              "OverwriteTarget": {
                                "type": "boolean",
                                "title": "Overwrite Target",
                                "description": "Should source files overwrite target files?",
                                "default": false,
                                "examples": [true]
                              }
                            },
                            "required":[
                              "TargetFileMode",
                              "TargetDirectoryPath"
                            ]
                          }
                        }
                      }
                    }
                  },
                  {
                    "properties": {
                      "Mode": {
                        "enum": ["Fixed Width Columns"]
                      },
                      "ModeSettings": {
                        "type": "object",
                        "title": "",
                        "properties": {
                          "FixedWidthSettings": {
                            "type": "object",
                            "title": "Fixed Width Columns Settings",
                            "properties": {
                              "ColumnsConfigurationFile": {
                                "type": "string",
                                "title": "Columns Configuration File",
                                "description": "Path to the columns configuration file for fixed width files (optional)"
                              },
                              "AutoGenRowNumber": {
                                "type": "boolean",
                                "title": "Auto Generate Row Number",
                                "description": "Automatically generate a row number property (AUTO_ROW_NUM)",
                                "default": false,
                                "examples": [true]
                              },
                              "Columns": {
                                "readOnly": false,
                                "type": "array",
                                "title": "Columns",
                                "description": "Columns for fixed column width files",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "ColumnName": {
                                      "title": "Column Name",
                                      "description": "The name of the column.",
                                      "type": "string"
                                    },
                                    "ColumnStart": {
                                      "title": "Column Start",
                                      "description": "The index of the first character of the column (0 is the first index).",
                                      "type": "number"
                                    },
                                    "ColumnEnd": {
                                      "title": "Column End",
                                      "description": "The index of the last character of the column.",
                                      "type": "number"
                                    },
                                    "IsKey": {
                                      "title": "Is Key",
                                      "description": "Is this column the key property?",
                                      "default": false,
                                      "type": "boolean"
                                    },
                                    "TrimWhitespace": {
                                      "title": "Trim Whitespace",
                                      "description": "Trim all leading and trailing whitespace?",
                                      "default": false,
                                      "type": "boolean"
                                    }
                                  },
                                  "required": [
                                    "ColumnName",
                                    "ColumnStart",
                                    "ColumnEnd"
                                  ]
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "properties": {
                      "Mode": {
                        "enum": ["Excel"]
                      },
                      "ModeSettings": {
                        "type": "object",
                        "title": "",
                        "properties": {
                          "ExcelModeSettings": {
                            "type": "object",
                            "title": "Excel Settings",
                            "properties": {
                              "HasHeader": {
                                "type": "boolean",
                                "title": "Has Header",
                                "description": "Does the file have a header row?",
                                "default": false,
                                "examples": [true]
                              },
                              "AutoGenRowNumber": {
                                "type": "boolean",
                                "title": "Auto Generate Row Number",
                                "description": "Automatically generate a row number property (AUTO_ROW_NUM)",
                                "default": false,
                                "examples": [true]
                              },
                              "ExcelColumns": {
                                "type": "string",
                                "title": "Excel Columns",
                                "description": "The columns to read from an Excel file (ex. 0, 2-5, 7, 10, 12-15).",
                                "default": "",
                                "pattern": ""
                              },
                              "ExcelCells": {
                                "readOnly": false,
                                "type": "array",
                                "title": "Excel Cells",
                                "description": "Cells to include on all records.",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "ColumnName": {
                                      "title": "Column Name",
                                      "description": "The name of the column.",
                                      "type": "string"
                                    },
                                    "ColumnIndex": {
                                      "title": "Column Index",
                                      "description": "The column index of the cell.",
                                      "type": "number"
                                    },
                                    "RowIndex": {
                                      "title": "Row Index",
                                      "description": "The row index of the cell.",
                                      "type": "number"
                                    }
                                  },
                                  "required": [
                                    "ColumnName",
                                    "ColumnIndex",
                                    "RowIndex"
                                  ]
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  },
                  {
                    "properties": {
                      "Mode": {
                        "enum": ["AS400"]
                      },
                      "ModeSettings": {
                        "type": "object",
                        "title": "",
                        "properties": {
                          "AS400Settings": {
                            "type": "object",
                            "title": "AS400 Settings",
                            "properties": {
                              "AS400FormatsConfigurationFile": {
                                "type": "string",
                                "title": "AS400 Formats Configuration File",
                                "description": "Path to the columns configuration file for fixed width files (optional and recommended)",
                                "default": ""
                              },
                              "KeyValueWidth": {
                                "title": "Key Value Width",
                                "description": "The number of characters the key value uses from the start of each line.",
                                "type": "number",
                                "default": 2
                              },
                              "Formats": {
                                "readOnly": false,
                                "type": "array",
                                "title": "AS400 Formats",
                                "description": "Formats that can be found in the AS400 files.",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "SingleRecordPerLine": {
                                      "type": "boolean",
                                      "title": "Single Record Per Line",
                                      "description": "Is this format contained on a single line?",
                                      "default": false,
                                      "examples": [true]
                                    },
                                    "IsGlobalHeader": {
                                      "type": "boolean",
                                      "title": "Is Global Header",
                                      "description": "Is this format part of the global header information?",
                                      "default": false,
                                      "examples": [true]
                                    },
                                    "Columns": {
                                      "readOnly": false,
                                      "type": "array",
                                      "title": "Single Line Columns",
                                      "description": "Columns for single line formats",
                                      "items": {
                                        "type": "object",
                                        "properties": {
                                          "ColumnName": {
                                            "title": "Column Name",
                                            "description": "The name of the column.",
                                            "type": "string"
                                          },
                                          "ColumnStart": {
                                            "title": "Column Start",
                                            "description": "The index of the first character of the column (0 is the first index).",
                                            "type": "number"
                                          },
                                          "ColumnEnd": {
                                            "title": "Column End",
                                            "description": "The index of the last character of the column.",
                                            "type": "number"
                                          },
                                          "IsKey": {
                                            "title": "Is Key",
                                            "description": "Is this column the key property?",
                                            "default": false,
                                            "type": "boolean"
                                          },
                                          "TrimWhitespace": {
                                            "title": "Trim Whitespace",
                                            "description": "Trim all leading and trailing whitespace?",
                                            "default": false,
                                            "type": "boolean"
                                          },
                                          "IsGlobalHeader": {
                                            "type": "boolean",
                                            "title": "Is Global Header",
                                            "description": "Is this column part of the global header information?",
                                            "default": false,
                                            "examples": [true]
                                          },
                                          "IsHeader": {
                                            "type": "boolean",
                                            "title": "Is Header",
                                            "description": "Is this column part of the header information?",
                                            "default": false,
                                            "examples": [true]
                                          }
                                        },
                                        "required": [
                                          "ColumnName",
                                          "ColumnStart",
                                          "ColumnEnd"
                                        ]
                                      }
                                    },
                                    "KeyValue": {
                                      "type": "object",
                                      "title": "AS400 Key Value",
                                      "properties": {
                                        "Value": {
                                          "title": "Value",
                                          "description": "The value of the key.",
                                          "type": "string"
                                        },
                                        "Name": {
                                          "title": "Name",
                                          "description": "The name of the key.",
                                          "type": "string"
                                        }
                                      }
                                    },
                                    "MultiLineDefinition": {
                                      "type": "object",
                                      "title": "AS400 Multi Line Definition",
                                      "properties": {
                                        "TagNameDelimiter": {
                                          "title": "Tag Name Delimiter",
                                          "description": "The delimiter of the tag name.",
                                          "type": "string"
                                        },
                                        "TagNameStart": {
                                          "title": "Tag Name Start",
                                          "description": "The starting index of the tag name.",
                                          "type": "number"
                                        },
                                        "TagNameEnd": {
                                          "title": "Tag Name End",
                                          "description": "The ending index of the tag name.",
                                          "type": "number"
                                        },
                                        "ValueLengthStart": {
                                          "title": "Value Length Start",
                                          "description": "The starting index of the value length.",
                                          "type": "number"
                                        },
                                        "ValueLengthEnd": {
                                          "title": "Value Length End",
                                          "description": "The ending index of the value length.",
                                          "type": "number"
                                        },
                                        "ValueStart": {
                                          "title": "ValueStart",
                                          "description": "The starting indec of the value",
                                          "type": "number"
                                        }
                                      }
                                    },
                                    "HeaderRecordKeys": {
                                      "readOnly": false,
                                      "type": "array",
                                      "title": "Header Record Keys",
                                      "description": "Keys that indicate header values",
                                      "items": {
                                        "type": "string"
                                      }
                                    },
                                    "MultiLineColumns": {
                                      "readOnly": false,
                                      "type": "array",
                                      "title": "Multi Line Columns",
                                      "description": "Columns for multi line formats",
                                      "items": {
                                        "type": "object",
                                        "properties": {
                                          "ColumnName": {
                                            "title": "Column Name",
                                            "description": "The name of the column.",
                                            "type": "string"
                                          },
                                          "ColumnStart": {
                                            "title": "Column Start",
                                            "description": "The index of the first character of the column (0 is the first index).",
                                            "type": "number"
                                          },
                                          "ColumnEnd": {
                                            "title": "Column End",
                                            "description": "The index of the last character of the column.",
                                            "type": "number"
                                          },
                                          "IsKey": {
                                            "title": "Is Key",
                                            "description": "Is this column the key property?",
                                            "default": false,
                                            "type": "boolean"
                                          },
                                          "TrimWhitespace": {
                                            "title": "Trim Whitespace",
                                            "description": "Trim all leading and trailing whitespace?",
                                            "default": false,
                                            "type": "boolean"
                                          },
                                          "IsGlobalHeader": {
                                            "type": "boolean",
                                            "title": "Is Global Header",
                                            "description": "Is this column part of the global header information?",
                                            "default": false,
                                            "examples": [true]
                                          },
                                          "IsHeader": {
                                            "type": "boolean",
                                            "title": "Is Header",
                                            "description": "Is this column part of the header information?",
                                            "default": false,
                                            "examples": [true]
                                          }
                                        },
                                        "required": [
                                          "ColumnName",
                                          "ColumnStart",
                                          "ColumnEnd"
                                        ]
                                      }
                                    }
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                ]
              }
            }
          }
        }
      },
      "required": ["RootPaths"]
    }
  }
}